<div class="tought-form-container">
    
    <h1>Criando um Pensamento:</h1>
    <form action="/toughts/add" method="POST">
        <div class="form-control">
            <label for="title">Titulo</label>
            <input type="text" name="title" placeholder="Digite o seu pensamento...">
        </div> 
        <div class="parte-baixa">
            <input type="submit" value="Criar Pensamento">
            <a href=".toughts/dashboard">Voltar a Dashboard</a>
        </div>
       
    </form>
</div>